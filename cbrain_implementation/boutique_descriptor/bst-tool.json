{
    "name": "Brainstorm Tool",
    "author": "Corentin Labelle",
    "description": "Enables to perform the pre-processing steps on EEG and MEG data.",
    "tool-version": "v1.0",
    "schema-version": "0.5",
    "command-line": "bash run_bst_tool.sh [MATLABROOT] [BIDS_DIRECTORY] [PIPELINE_PATH].json",
    "container-image": {
        "image": "TYLER WILL FILL THIS",
        "index": "TYLER WILL FILL THIS",
        "type": "singularity"
    },
    "inputs": [
        {
            "id": "bids_directory",
            "name": "BIDS directory",
            "optional": false,
            "type": "String",
            "description": "Path to a BIDS directory.",
            "value-key": "[BIDS_DIRECTORY]"
        },
        {
            "id": "pipeline_path",
            "name": "Pipeline Path",
            "optional": false,
            "type": "File",
            "description": "Path to a pipeline.",
            "value-key": "[PIPELINE_PATH]"
        }
    ],
    "output-files": [
        {
            "id": "output_directory",
            "name": "Output Directory",
            "optional": false,
            "description": "Path to the output directory.",
            "path-template": "[BIDS_DIRECTORY]_output"
        }
    ],
    "doi": "10.5072/zenodo.1182898"
}